1700 PRINTSPCS%"RETURN - FIRE"'
1800 PRINTSPCS%"   TAB - SMART BOMB"
1900 PRINTSPCS%"     H - HYPERSPACE"''
2000 PROCP("Copyright (C) Acornsoft 1982")
2100 PRINT'':PROCP(CHR$&88+"Press SPACE BAR to continue")
2200 *FX15
2300 REPEATUNTILGET=32
2400 PRINT:?&FE62=0:CALL&1100
2500 DEFPROCPD(A$)FORI%=0TO1:VDU&9D81;&8D83;:PRINTSPC(16-LENA$DIV2)A$:NEXT:ENDPROC
2600 DEFPROCP(A$)PRINTSPC(20-LENA$DIV2)A$:ENDPROC
